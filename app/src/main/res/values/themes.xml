<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- light theme. -->
    <style name="lightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--main home default theme AppTheme -->
        <item name="content_background">#FFFFFF</item>
        <item name="img_tint">#000000</item>
        <item name="img_tint_selected">#FF5454</item>
        <item name="text_color">#000000</item>
        <item name="text_color_sub">#000000</item>
        <item name="text_color_selected">#FF5454</item>
        <item name="button_Color">#FF5454</item>
        <item name="linear_background">#FFE7E7</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <!-- dark theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--main home theme darkTheme on Switch Click -->
        <item name="content_background">#000000</item>
        <item name="img_tint">#FFFFFF</item>
        <item name="img_tint_selected">#FFFFFF</item>
        <item name="text_color">#FFFFFF</item>
        <item name="text_color_sub">#FC4040</item>
        <item name="text_color_selected">#FFFFFF</item>
        <item name="button_Color">#FC4040</item>
        <item name="linear_background">#FC4040</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!--this is use for smooth reset activity on switch click on off -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>